{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
